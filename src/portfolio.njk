--- 
layout : layout.njk
title : Portfolio
styles:
        - /assets/css/portfolio.css
---



<div class="container mt-5">
    <div class="photoh2 row text-center">
      <h2>PORTFOLIO</h2>
      <nav aria-label="breadcrumb">
        <ul class="breadcrumb justify-content-center">
          <li class="breadcrumb-item"><a href="{{'/index.html' | url}}">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">Portfolio</li>
        </ul>
      </nav>
    </div>
  </div>
  <div class="container mt-5 pb-5 d-flex justify-content-center">
    <div class="container-btn row row-cols-3 row-cols-md-1 justify-content-center pb-5 w-75">
      <!-- filter buttons -->
    </div>
  </div>
  <!-- container ITEMS -->
  <div class="container mt-5 pb-5">
    <div class="row maincontent row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4 mx-5 pt5">
            
      {%- for post in collections.post -%}
        <div class="col-photo col d-flex justify-content-center">
          <div class="card border border-0 shadow h-25 w-75">
            <img 
            src="{{ post.data.image }}" 
            class="card-img" 
            alt="{{ post.data.imageAlt }}" 
            loading="lazy">

          </div>
        </div>
      {%- endfor -%}
      {%- for post in collections.post | reverse -%}
            <article class="recent-articles">
                <!--Main Article Image-->
                <picture class="blog-mainImage">
                    <img
                        src="{{ post.data.image }}"
                        alt="{{ post.data.imageAlt }}"
                        width="795"
                        height="400"
                        decoding="async"
/>
                </picture>
                <!--Article Info-->
                <div class="article-group">
                    <div class="blog-authorGroup">
                        <!--Author Image-->
                        <picture class="blog-author-img">
                            <img
              src="/assets/svgs/profile.svg"
              alt="house"
              width="32"
              height="32"
              decoding="async"
/>
                        </picture>
                        <span class="blog-author">{{ post.data.author }}</span>
                        <span aria-hidden="true" class="blog-dot"></span>
                    </div>
                    <h2 class="blog-h1">
                        {{ post.data.blogTitle }}
                    </h2>
                    <p class="blog-desc">
                        {{ post.data.blogDescription }}
                    </p>
                    <a href="{{ post.url }}" class="blog-link">Continue Reading</a>
                </div>
            </article>
        {%- endfor -%}
    </div>
  </div>